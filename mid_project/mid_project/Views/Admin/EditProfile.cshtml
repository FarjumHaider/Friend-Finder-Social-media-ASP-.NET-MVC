@model mid_project.Models.Database.Admin
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center" style=" margin-left: 300px;">
        <div class="col-10 col-md-8 col-lg-6">

            <form action="/Admin/EditProfile" method="POST" enctype="multipart/form-data">

                <input type="hidden" placeholder="Id" name="Id" value="@Model.Id" class="form-control" /> <br />

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="Name" name="Name" value="@Model.Name" class="form-control" /> <br />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" placeholder="Email" name="Email" value="@Model.Email" class="form-control" /> <br />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <img src="@Url.Content(Model.Image)" width="70" height="70" />
                    <input type="file" placeholder="Image" name="ImageFile" value="@Model.Image" class="form-control" /> <br />
                </div>

                <input type="submit" value="Edit" class="btn btn-primary" />

            </form>
        </div>
    </div>
</div>