@model mid_project.Models.Database.Employee
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center" style=" margin-left: 300px;">
        <div class="col-10 col-md-8 col-lg-6">
            <form action="/Employee/Edit" method="POST" enctype="multipart/form-data">

                <input type="hidden" placeholder="Id" name="Id" value="@Model.Id" class="form-control" />

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="Name" name="Name" value="@Model.Name" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" placeholder="Email" name="Email" value="@Model.Email" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <label>Joining Date</label>
                    <input type="date" placeholder="JoiningDate" name="JoiningDate" value="@Model.joiningDate.ToString("yyyy-MM-dd")" class="form-control" />
                    @Html.ValidationMessageFor(model => model.joiningDate, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <label>Status</label>
                    <select name="Status" value="@Model.Status" class="form-control" @*@if (Model.Status != null) { selected }*@>
                        <option disabled selected>Choose</option>
                        @if (Model.Status == "Active")
                        {
                            <option value="Active" selected>@Model.Status</option>
                            <option value="Deactive">Deactive</option>
                        }
                        else
                        {
                            <option value="Active">Active</option>
                            <option value="Deactive" selected>@Model.Status</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })<br />
                </div>

                <div class="form-group">
                    <img src="@Url.Content(Model.Image)" width="50" height="50" />
                    <input type="file" placeholder="Image" name="ImageFile" value="@Model.Image" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })<br />
                </div>

                <input type="submit" value="Edit" class="btn btn-primary" />

            </form>
        </div>
    </div>
</div>