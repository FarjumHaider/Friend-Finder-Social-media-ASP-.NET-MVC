@model mid_project.Models.Database.User
@{
    ViewBag.Title = "Login";
}

<br />
<br />
<br />
<br />
<br />
<br />

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center" style=" margin-left: 400px; font-size:20px;">
        <div class="col-10 col-md-8 col-lg-6">

            <form action="/Home/Login" method="post">
                <input type="text" name="Username" placeholder="Username" value="@Model.Username" /><br />
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })<br />
                <input type="password" name="Password" placeholder="Password" value="@Model.Password" /><br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })<br />
                @if (TempData["msg"] != null)
                {
                    <span class="text-danger">@TempData["msg"]</span>
                }
                <input type="submit" value="Login" class="btn btn-success" /><br />
            </form>

            


        </div>
    </div>
</div>


